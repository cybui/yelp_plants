
<%- include("partials/header") %>
<div class="dropdown show">
  <a class="btn btn-secondary dropdown-toggle sort-by" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort by
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="/plants/alphabetical">A-Z</a>
    <a class="dropdown-item" href="/plants/ascending">Ascending Score</a>
    <a class="dropdown-item" href="/plants/descending">Descending Score</a>
  </div>
</div>

	<div class = "container">		 
			<div class= "row">
			<% plants.forEach((plant) => { %>
				<div class="card mx-3 my-4">
					<a href="/plants/<%= plant._id %>">
					<img class="card-img card-img-top" src="<%= plant.image %>" alt="Picture of <%= plant.commonName%>">
					</a>
					<h3 class="card-title mt-3"><%= plant.commonName %></h3>
					<h6 class = "card-subtitle mb-3 mx-3 mt-2"><%= plant.scientificName %></h6>
				</div>
			<% }) %>
		</div>
</div>
<%- include("partials/footer") %>