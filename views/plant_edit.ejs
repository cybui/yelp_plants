<%- include("partials/header") %>

<h1 class="form-group">Edit plant</h1>
<div class="container">
	<form action="/plants/<%= plant._id %>?_method=PUT" method="POST">
	  <div class="form-group">
		<label for="common name">Common Name</label>
		<input type="text" class="form-control" name="commonName" value= "<%= plant.commonName %>"> 
	 </div>
	<div class="form-group">
		<label for="scientific name">Scientific Name</label>
		<input type="text" class="form-control" name="scientificName" value= "<%= plant.scientificName %>"> 
	  </div>
	<div class="form-group">
		<label for="family">Scientific Family</label>
		<input type="text" class="form-control" name="family" value= "<%= plant.family %>"> 
	</div>
	<div class="form-group">
			<label for="text">Description</label>
			<textarea class="form-control" name="description" id="description" rows="8" cols="80"><%= plant.description %> </textarea>
		</div>
	<div class="form-group form-check">
		<input type="checkbox" class="form-check-input" name="edible"  <%= plant.edible ? 'checked' : '' %>> 
		<label for="edible">Edible?</label>
	 </div>
	<div class="form-group">
		<label for="type">Type</label>
		<select class="form-control" id="type" name="type">
			<option disabled>--select type--</option>
			<option <%= plant.type === 'herb' ? 'selected' : '' %> >Herb</option>
			<option <%= plant.type === "shrub" ? "selected" : "" %> >Shrub</option>
			<option <%= plant.type === "tree" ? "selected" : "" %> >Tree</option>
			<option <%= plant.type === "creeper" ? "selected" : "" %> >Creeper</option>
			<option <%= plant.type === "climber" ? "selected" : "" %> >Climber</option>
		</select>
	  </div>
	<div class="form-group">
		<label for="image">Link to image </label>
		<input type="text" class="form-control" name="image" value= "<%= plant.image %>"> 
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>
 
<%- include("partials/footer") %>